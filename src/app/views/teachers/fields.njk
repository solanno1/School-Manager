<div class="item">
    <div>URL Foto</div>
    <div>
        <input type="url" name="avatar_url" placeholder="http://" value="{{teacher.avatar_url}}">
    </div>
</div>

<div class="item">
    <div>Professor</div>
    <div>
        <input type="text" name="name" placeholder="Nome do professor" value="{{teacher.name}}">
    </div>
</div>

<div class="item">
    <div>Data de nascimento</div>
    <div>
        <input type="date" name="birth" value="{{teacher.birth}}">
    </div>
</div>

<div class="item">
    <div>Escolaridade</div>
    <div>
        <select name="education_level" class="select">
            <option value="Ensino Medio Completo"
            {% if teacher.education_level == "Ensino Medio Completo" %}
            selected
            {% endif %}
            >Ensino medio completo</option>
            <option value="Ensino Superior Completo"
            {% if teacher.education_level == "Ensino Superior Completo" %}
            selected
            {% endif %}
            >Ensiono superior completo</option>
            <option value="Mestrado"
            {% if teacher.education_level == "Mestrado" %}
            selected
            {% endif %}
            >Mestrado</option>
            <option value="Doutorado"
            {% if teacher.education_level == "Doutorado" %}
            selected
            {% endif %}
            >Doutorado</option>
        </select>
    </div>
</div>

<div class="item">
    <div>Aulas</div>
    <div>
        <span>
            <input type="radio"
                   name="class_type"
                   value="P"
                   {% if teacher.class_type == "P" %}
                    checked
                   {% endif %}>Presencial</span>
        <span>
            <input type="radio"
                   name="class_type"
                   value="D"
                   {% if teacher.class_type == "D" %}
                   checked
                   {% endif %}>À distância</span>
    </div>
</div>

<div class="item">
    <div>Área de atuação</div>
    <div>
        <input type="text" name="subjects_taught" placeholder="Aulas apto a lecionar" value="{{teacher.subjects_taught}}">
    </div>
</div>
<button type="submit">Salvar</button>