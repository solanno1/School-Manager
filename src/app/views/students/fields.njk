<div class="item">
    <div>URL Foto</div>
    <div>
        <input type="url" name="avatar_url" placeholder="http://" value="{{student.avatar_url}}">
    </div>
</div>

<div class="item">
    <div>Aluno</div>
    <div>
        <input type="text" name="name" value="{{student.name}}">
    </div>
</div>

<div class="item">
    <div>Data de nascimento</div>
    <div>
        <input type="date" name="birth" value="{{student.birth}}">
    </div>
</div>

<div class="item">
    <div>E-mail</div>
    <div>
        <input type="email" name="email" value="{{student.email}}">
    </div>
</div>

<div class="item">
    <div>Ano atual</div>
    <div>
        <select name="select" class="select">
            <option value="5EF"
            {% if student.education_level == "5EF" %}
            selected
            {% endif %}
            >5º Ano Ensino Fundamental</option>
            <option value="6EF"
            {% if student.education_level == "6EF" %}
            selected
            {% endif %}
            >6º Ano Ensino Fundamental</option>
            <option value="7EF"
            {% if student.education_level == "7EF" %}
            selected
            {% endif %}
            >7º Ano Ensino Fundamental</option>
            <option value="8EF"
            {% if student.education_level == "8EF" %}
            selected
            {% endif %}
            >8º Ano Ensino Fundamental</option>
            <option value="1EM"
            {% if student.education_level == "1EM" %}
            selected
            {% endif %}
            >1º Ano Ensino Medio</option>
            <option value="2EM"
            {% if student.education_level == "2EM" %}
            selected
            {% endif %}
            >2º Ano Ensino Medio</option>
            <option value="3EM"
            {% if student.education_level == "3EM" %}
            selected
            {% endif %}
            >3º Ano Ensino Medio</option>
        </select>
    </div>
</div>


<div class="item">
    <div>Carga horária</div>
    <div>
        <input type="number" name="carga" value="{{student.carga}}">
    </div>
</div>
<button type="submit">Salvar</button>