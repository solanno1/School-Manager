{% extends "layout.njk" %}

{% block content %}
    <form class="card" method="POST" action="/teachers">
        <section class="avatar" style="background: url(https://source.unsplash.com/collection/1287676/500x500) no-repeat center center / cover"></section>
        <section class="details">
            <h3>Novo Professor</h3>

                <div class="item">
                    <div>URL Foto</div>
                    <div>
                        <input type="url" name="avatar_url" placeholder="http://">
                    </div>
                </div>

                <div class="item">
                    <div>Professor</div>
                    <div>
                        <input type="text" name="name" placeholder="Nome do instrutor">
                    </div>
                </div>

                <div class="item">
                    <div>Data de nascimento</div>
                    <div>
                        <input type="date" name="birth">
                    </div>
                </div>

                <div class="item">
                    <div>Escolaridade</div>
                    <div>
                        <select name="select" class="select">
                            <option value="Ensino Medio Completo">Ensino medio completo</option>
                            <option value="Ensino Superior Completo">Ensiono superior completo</option>
                            <option value="Mestrado">Mestrado</option>
                            <option value="Doutorado">Doutorado</option>
                        </select>
                    </div>
                </div>

                <div class="item">
                    <div>Aulas</div>
                    <div>
                        <span><input type="radio" name="aula" value="P" checked="checked">Presencial</span>
                        <span><input type="radio" name="aula" value="D">À distância</span>
                    </div>
                </div>

                <div class="item">
                    <div>Área de atuação</div>
                    <div>
                        <input type="text" name="services" placeholder="Aulas apto a lecionar">
                    </div>
                </div>
                <button type="submit">Salvar</button>
        </section>
    </form>
{% endblock content %}

